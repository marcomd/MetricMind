# PostgreSQL Database Configuration (Production)
# Option 1: Use DATABASE_URL (recommended for remote/hosted databases like Neon, Heroku, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Option 2: Use individual connection parameters (local development)
PGHOST=localhost
PGPORT=5432
PGDATABASE=git_analytics
PGUSER=your_username
PGPASSWORD=your_password

# Note: DATABASE_URL takes priority over individual parameters if both are set

# PostgreSQL Test Database Configuration
PGDATABASE_TEST=git_analytics_test

# Optional: Date range for extractions (can be overridden in config)
DEFAULT_FROM_DATE="6 months ago"
DEFAULT_TO_DATE="now"

# Optional: Output directory for JSON exports
OUTPUT_DIR=./data/exports

# AI Categorization Configuration
# Enable AI-powered categorization for commits that pattern matching couldn't categorize
AI_PROVIDER=ollama                    # Options: gemini, ollama, anthropic (leave empty to disable AI categorization)
AI_TIMEOUT=120                        # Timeout in seconds for LLM requests (default: 120, increase for slow models)
AI_RETRIES=3                          # Number of retry attempts for failed LLM requests (default: 3)
PREVENT_NUMERIC_CATEGORIES=true       # Reject numeric/version categories like "2.58.0" or "#6802" (default: true)

# Gemini Configuration (required if AI_PROVIDER=gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp    # Model to use (default: gemini-2.0-flash-exp)
GEMINI_TEMPERATURE=0.1               # Temperature 0-2 (lower = more consistent, default: 0.1)

# Ollama Configuration (required if AI_PROVIDER=ollama)
OLLAMA_API_BASE=http://localhost:11434/v1  # Ollama API base URL with /v1 suffix (default: http://localhost:11434/v1)
OLLAMA_MODEL=gpt-oss:20b-cloud       # Model name (see https://ollama.com/library?sort=popular)
OLLAMA_TEMPERATURE=0.1               # Temperature 0-2 (lower = more consistent, default: 0.1)

# Anthropic Configuration (required if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-haiku-4-5-20251001  # Model options: claude-haiku-4-5-20251001 (cheapest), claude-sonnet-4-5-20250929 (balanced)
                                           # Aliases also supported: claude-haiku-4-5, claude-sonnet-4-5
ANTHROPIC_TEMPERATURE=0.1                  # Temperature 0-2 (lower = more consistent, default: 0.1)

# Optional: Debug mode for AI categorization
# AI_DEBUG=true                      # Enable verbose AI categorization logging
